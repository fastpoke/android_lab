<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android"
        android:weightSum="1" tools:context=".RightActivity"
        android:background="@drawable/backgroundland">
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/title"
                android:id="@+id/activityTitle" android:layout_margin="10dp" android:gravity="center|center_horizontal"
                android:textColor="#ffbdbdbd" android:textStyle="normal|italic" android:textSize="14dp"
                android:layout_alignParentLeft="true" android:layout_marginLeft="20dp"
                android:layout_alignParentTop="true" android:layout_marginTop="20dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Right random"
                android:id="@+id/randLabel" android:textSize="58dp"
                android:gravity="center_vertical|center_horizontal" android:layout_marginTop="64dp" android:textColor="#ffbdbdbd"
                android:layout_below="@+id/activityTitle" android:layout_alignLeft="@+id/activityTitle"
                android:textStyle="normal"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="000"
                android:id="@+id/tvView"
                android:textSize="58dp" android:gravity="center_vertical|center_horizontal" android:textColor="#ffff0000"
                android:layout_alignTop="@+id/randLabel" android:layout_toRightOf="@+id/randLabel"
                android:textStyle="bold"/>
        <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal" android:layout_weight="1"
                android:layout_alignParentLeft="true" android:layout_marginLeft="0dp"
                android:layout_alignParentTop="true" android:layout_marginTop="443dp"/>
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/SlideToMain" android:layout_gravity="bottom|right"
                android:background="@drawable/arrowright" android:onClick="onClickMain"
                android:layout_alignParentLeft="true" android:layout_marginLeft="1068dp"
                android:layout_alignParentTop="true" android:layout_marginTop="590dp"/>
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/SlideToMain"
                android:background="@drawable/arrowleft"
                android:onClick="onClickMain"
                android:layout_alignParentBottom="true" android:layout_alignParentLeft="true"/>
        <ImageButton android:layout_width="wrap_content" android:layout_height="wrap_content"
                     android:id="@+id/SlideToMain" android:background="@drawable/arrowleft"
                     android:layout_alignTop="@+id/SlideToMain" android:layout_alignParentRight="true"
                     android:visibility="invisible"/>
</RelativeLayout>